{
  "extends": "astro/tsconfigs/strict",
  "include": ["src/**/*", "convex/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/amorph/*": ["./src/amorph/*"]
    },
    "types": ["vite/client"]
  }
}
