---
/**
 * üçÑ FUNGI INDEX PAGE
 * ===================
 * 
 * Main page showing all fungi with AMORPH morphs
 * Loads real data from Convex
 */

import BaseLayout from '@/amorph/arch/layouts/BaseLayout.astro';
import { fetchFungi } from '@/amorph/arch/convex';

// Fetch fungi data from Convex
const fungi = await fetchFungi();

console.log(`üìä Loaded ${fungi?.length || 0} fungi from Convex`);
---

<BaseLayout 
  title="Pilze - Funginomi AMORPH"
  description="Morphologische Pilz-Datenbank mit perspektivischen Ansichten"
  enableGlow={false}
  enableSearch={true}
  enableAnimation={true}
>
  <!-- Page Header -->
  <header style="margin-bottom: 2rem; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
    <div>
      <h1 style="font-size: 2.5rem; font-weight: 700; color: white; margin-bottom: 0.5rem;">
        üçÑ Pilze Datenbank
      </h1>
      <p style="font-size: 1.125rem; color: rgba(255, 255, 255, 0.8);">
        {fungi?.length || 0} Pilze ¬∑ Morphologische Ansichten ¬∑ Perspektivisches Wissen
      </p>
    </div>
    
    <!-- View Toggle -->
    <div class="view-toggle">
      <button class="view-btn active" data-view="grid">
        üìä Grid View
      </button>
      <button class="view-btn" data-view="bubble">
        ü´ß Bubble View
      </button>
    </div>
  </header>

  <!-- Bubble Host -->
  <bubble-host id="bubble-view-host" style="display: none;"></bubble-host>

  <!-- Fungi Grid -->
  <div class="fungi-grid" id="grid-view-host">
    {fungi && fungi.length > 0 ? (
      fungi.map((fungus: any) => (
        <div class="fungus-card">
          <div class="card-image">
            <image-morph 
              src={`/images/fungi/${fungus.slug}.jpg`}
              alt={fungus.commonName}
            ></image-morph>
            {fungus.taxonomy && (
              <div class="image-overlay">
                {fungus.taxonomy.family && (
                  <div class="taxonomy-badge">
                    <span class="taxonomy-label">Familie</span>
                    <span class="taxonomy-value">{fungus.taxonomy.family}</span>
                  </div>
                )}
                {fungus.taxonomy.genus && (
                  <div class="taxonomy-badge">
                    <span class="taxonomy-label">Gattung</span>
                    <span class="taxonomy-value">{fungus.taxonomy.genus}</span>
                  </div>
                )}
              </div>
            )}
          </div>
          

          <div class="card-data">
            <!-- Safety & Identification -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="edibility"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="toxicityLevel"
            ></data-morph>

            <!-- Ecology & Habitat -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="ecologyAndHabitat.seasonality.primarySeason"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="ecologyAndHabitat.substrate"
            ></data-morph>

            <!-- Physical Characteristics -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="physicalCharacteristics.capColor"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="physicalCharacteristics.sporePrintColor"
            ></data-morph>

            <!-- Culinary & Nutritional -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="culinaryAndNutritional.flavorProfile"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="culinaryAndNutritional.preparationMethods"
            ></data-morph>

            <!-- Medicinal & Health -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="medicinalAndHealth.medicinalProperties"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="medicinalAndHealth.activeCompounds"
            ></data-morph>

            <!-- Cultivation & Processing -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="cultivationAndProcessing.cultivationDifficulty"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="cultivationAndProcessing.cultivationMethods"
            ></data-morph>

            <!-- Cultural & Historical -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="culturalAndHistorical.historicalSignificance"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="culturalAndHistorical.firstDocumented"
            ></data-morph>

            <!-- Commercial & Market -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="commercialAndMarket.commercialValue"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="commercialAndMarket.marketSegments"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="commercialAndMarket.commercialProducts"
            ></data-morph>

            <!-- Environmental & Conservation -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="environmentalAndConservation.ecologicalRole"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="environmentalAndConservation.ecosystemServices"
            ></data-morph>

            <!-- Research & Innovation -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="researchAndInnovation.researchInterest"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="activeResearchAreas"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="innovativeApplications"
            ></data-morph>

            <!-- Chemical & Properties -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="primaryCompounds"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="secondaryMetabolites"
            ></data-morph>

            <!-- Taxonomy -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="kingdom"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="phylum"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="class"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="order"
            ></data-morph>
          </div>

          <a href={`/fungi/${fungus.slug}`} class="card-link">
            Details ansehen ‚Üí
          </a>
        </div>
      ))
    ) : (
      <div class="empty-state">
        <p style="font-size: 1.5rem; color: rgba(255, 255, 255, 0.7); text-align: center;">
          üçÑ Keine Pilze gefunden
        </p>
        <p style="color: rgba(255, 255, 255, 0.5); text-align: center; margin-top: 0.5rem;">
          Stelle sicher, dass Convex Daten enth√§lt und PUBLIC_CONVEX_URL korrekt ist.
        </p>
      </div>
    )}
  </div>
</BaseLayout>

<style>
  /* Transparent Glassmorphism Card */
  .fungus-card {
    background: rgba(0, 0, 0, 0.15); /* Normal state: more transparent */
    backdrop-filter: blur(20px) saturate(140%);
    -webkit-backdrop-filter: blur(20px) saturate(140%);
    border-radius: 20px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.12);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(255, 255, 255, 0.05) inset;
    height: 100%; /* Equal height cards */
  }

  .fungus-card:hover {
    transform: translateY(-8px) scale(1.02);
    background: rgba(0, 0, 0, 0.4); /* Hover: darker/more opaque */
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.6), 0 0 0 1px rgba(255, 255, 255, 0.1) inset;
    border-color: rgba(255, 255, 255, 0.2);
  }

  .card-image {
    width: 100%;
    height: 0;
    padding-bottom: 100%; /* 1:1 square aspect ratio */
    overflow: hidden;
    background: rgba(0, 0, 0, 0.2);
    position: relative;
  }

  .card-image image-morph {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Force contain fit for images in cards */
  .card-image image-morph::part(image),
  .card-image image-morph .image,
  .card-image image-morph img {
    object-fit: contain !important;
  }

  .image-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.7) 50%, transparent 100%);
    padding: 1rem;
    display: flex;
    gap: 1rem;
    align-items: flex-end;
    z-index: 10;
  }

  .taxonomy-badge {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .taxonomy-label {
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: rgba(255, 255, 255, 0.6);
  }

  .taxonomy-value {
    font-size: 0.875rem;
    font-weight: 600;
    color: white;
    font-style: italic;
  }

  .card-header {
    padding: 2rem;
    background: transparent; /* Transparent instead of dark background */
    backdrop-filter: none;
    flex-shrink: 0; /* Prevent shrinking */
  }

  .card-header name-morph {
    display: block;
  }

  .card-header name-morph:first-child {
    margin-bottom: 0.75rem;
    font-size: 1.375rem;
    line-height: 1.3;
  }

  .quick-info {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.875rem 1.25rem;
    margin-top: 1rem;
    padding-top: 1rem;
  }

  .info-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    font-size: 0.8125rem;
  }

  .info-label {
    color: rgba(255, 255, 255, 0.5);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.6875rem;
  }

  .info-value {
    color: rgba(255, 255, 255, 0.95);
    font-weight: 600;
    font-size: 0.875rem;
  }

  .card-data {
    padding: 1.75rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
    background: transparent; /* Transparent instead of dark background */
    overflow: visible; /* Let content flow naturally */
  }

  .card-data data-morph {
    margin-bottom: 0;
  }

  .card-link {
    display: block;
    padding: 1.25rem 1.5rem;
    text-align: center;
    background: rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(8px);
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
    margin-top: auto; /* Push to bottom of card */
    flex-shrink: 0; /* Prevent shrinking */
  }

  .card-link:hover {
    background: rgba(0, 0, 0, 0.7);
    color: #22c55e;
    box-shadow: 0 -2px 12px rgba(34, 197, 94, 0.3) inset, 0 0 20px rgba(34, 197, 94, 0.1);
  }

  /* View Toggle - Black Glassmorphism */
  .view-toggle {
    display: flex;
    gap: 0.5rem;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(16px);
    padding: 0.375rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.6), 0 0 0 1px rgba(255, 255, 255, 0.02) inset;
  }

  .view-btn {
    padding: 0.75rem 1.5rem;
    background: transparent;
    border: none;
    border-radius: 8px;
    color: rgba(255, 255, 255, 0.6);
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .view-btn:hover {
    background: rgba(0, 0, 0, 0.6);
    color: rgba(255, 255, 255, 0.9);
  }

  .view-btn.active {
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(8px);
    color: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(255, 255, 255, 0.1) inset;
  }

  /* Bubble Host */
  #bubble-view-host {
    margin-bottom: 2rem;
  }

  /* Fungi Grid */
  .fungi-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
    gap: 2.5rem;
    margin-bottom: 4rem;
    padding: 1rem 0;
    align-items: start; /* Align cards to top for better visual balance */
  }
  
  /* Morphs */
  .morphs {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  /* Tags */
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 0.5rem 0;
  }
  
  /* Detail Link */
  .detail-link {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .detail-link:hover {
    transform: translateX(4px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  }
  
  /* Empty State */
  .empty-state {
    grid-column: 1 / -1;
    padding: 4rem 2rem;
    text-align: center;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .fungi-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .fungus-card {
      padding: 1rem;
    }

    header {
      flex-direction: column;
      align-items: flex-start !important;
    }
  }
  
  /* Dark Mode */
  @media (prefers-color-scheme: dark) {
    .fungus-card {
      background: rgba(30, 30, 30, 0.9);
      color: rgba(255, 255, 255, 0.9);
    }
  }
</style>

<script define:vars={{ fungi }}>
  // Wait for AMORPH and hosts to load
  async function initViewToggle() {
    const amorph = window.amorph;
    if (!amorph) {
      console.log('‚è≥ Waiting for AMORPH...');
      setTimeout(initViewToggle, 100);
      return;
    }

    // Get host elements
    const bubbleHost = document.getElementById('bubble-view-host');
    const gridHost = document.getElementById('grid-view-host');
    
    if (!bubbleHost || !gridHost) {
      console.warn('‚ö†Ô∏è Host elements not found, retrying...');
      setTimeout(initViewToggle, 100);
      return;
    }

    // Wait for bubbleHost to be fully upgraded (web component ready)
    if (!bubbleHost.setData) {
      console.log('‚è≥ Waiting for BubbleHost to upgrade...');
      setTimeout(initViewToggle, 100);
      return;
    }

    // DATENGETRIEBEN: √úbergebe Fungi-Daten an BubbleHost
    console.log('üìä Fungi data:', fungi);
    bubbleHost.setData(fungi);
    console.log(`‚úÖ Passed ${fungi.length} fungi to BubbleHost`);

    // Enable connections by default for similarity visualization
    setTimeout(() => {
      const bubbleView = bubbleHost.shadowRoot?.querySelector('bubble-view');
      if (bubbleView) {
        bubbleView.showConnections = true;
        console.log('‚úÖ Enabled similarity-based connections in BubbleView');
      }
    }, 1000);

    // Initialize AstroDataSearchReactor for raw data searching
    try {
      const { AstroDataSearchReactor } = await import('/src/amorph/reactors/AstroDataSearchReactor.js');
      const astroDataSearchReactor = new AstroDataSearchReactor();
      
      // Get all fungus cards as search containers
      const fungusCards = document.querySelectorAll('.fungus-card');
      if (fungusCards.length > 0) {
        astroDataSearchReactor.apply(Array.from(fungusCards));
        console.log(`‚úÖ AstroDataSearchReactor applied to ${fungusCards.length} containers`);
      }
    } catch (error) {
      console.error('‚ùå Failed to load AstroDataSearchReactor:', error);
    }

    // MorphHeader will initialize with 4 default perspectives automatically
    console.log('‚úÖ Perspectives will be initialized by MorphHeader');

    // View Toggle functionality
    const viewBtns = document.querySelectorAll('.view-btn');

    viewBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const view = btn.dataset.view;
        
        // Update active state
        viewBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // Toggle views
        if (view === 'grid') {
          gridHost.style.display = 'grid';
          bubbleHost.style.display = 'none';
          console.log('üìä Switched to Grid View');
        } else {
          gridHost.style.display = 'none';
          bubbleHost.style.display = 'block';
          console.log('ü´ß Switched to Bubble View');
        }
      });
    });

    console.log('‚úÖ View toggle initialized with', fungi.length, 'fungi');
  }

  // Start initialization
  console.log('üöÄ Starting view toggle initialization...');
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initViewToggle);
  } else {
    initViewToggle();
  }
</script>
