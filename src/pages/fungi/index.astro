---
/**
 * üçÑ FUNGI INDEX PAGE
 * ===================
 * 
 * Main page showing all fungi with AMORPH morphs
 * Loads real data from Convex
 */

import BaseLayout from '@/amorph/arch/layouts/BaseLayout.astro';
import { fetchFungi } from '@/amorph/arch/convex';

// Fetch fungi data from Convex
const fungi = await fetchFungi();

console.log(`üìä Loaded ${fungi?.length || 0} fungi from Convex`);
---

<BaseLayout 
  title="Pilze - Funginomi AMORPH"
  description="Morphologische Pilz-Datenbank mit perspektivischen Ansichten"
  enableGlow={true}
  enableSearch={true}
  enableAnimation={true}
>
  <!-- Page Header -->
  <header style="margin-bottom: 2rem; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
    <div>
      <h1 style="font-size: 2.5rem; font-weight: 700; color: white; margin-bottom: 0.5rem;">
        üçÑ Pilze Datenbank
      </h1>
      <p style="font-size: 1.125rem; color: rgba(255, 255, 255, 0.8);">
        {fungi?.length || 0} Pilze ¬∑ Morphologische Ansichten ¬∑ Perspektivisches Wissen
      </p>
    </div>
    
    <!-- View Toggle -->
    <div class="view-toggle">
      <button class="view-btn active" data-view="grid">
        üìä Grid View
      </button>
      <button class="view-btn" data-view="bubble">
        ü´ß Bubble View
      </button>
    </div>
  </header>

  <!-- Bubble Host -->
  <bubble-host id="bubble-view-host" style="display: none;"></bubble-host>

  <!-- Fungi Grid -->
  <div class="fungi-grid" id="grid-view-host">
    {fungi && fungi.length > 0 ? (
      fungi.map((fungus: any) => (
        <div class="fungus-card">
          <div class="card-image">
            <image-morph 
              src={`/images/fungi/${fungus.slug}.jpg`}
              alt={fungus.commonName}
            ></image-morph>
          </div>
          
          <div class="card-header">
            <name-morph 
              value={fungus.commonName} 
              size="large"
            ></name-morph>
            <name-morph 
              value={fungus.latinName} 
              perspective="scientific"
              lang="la"
              size="small"
            ></name-morph>
            {fungus.taxonomy && (
              <div class="quick-info">
                <span class="info-item">
                  <span class="info-label">Familie:</span>
                  <span class="info-value">{fungus.taxonomy.family}</span>
                </span>
                <span class="info-item">
                  <span class="info-label">Gattung:</span>
                  <span class="info-value">{fungus.taxonomy.genus}</span>
                </span>
              </div>
            )}
          </div>

          <div class="card-data">
            <!-- Safety & Identification -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="edibility"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="toxicityLevel"
            ></data-morph>

            <!-- Ecology & Habitat -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="primarySeason"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="substrate"
            ></data-morph>

            <!-- Physical Characteristics -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="capColor"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="sporePrintColor"
            ></data-morph>

            <!-- Culinary & Nutritional -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="flavorProfile"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="cookingMethods"
            ></data-morph>

            <!-- Medicinal & Health -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="medicinalProperties"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="activeCompounds"
            ></data-morph>

            <!-- Cultivation & Processing -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="cultivationDifficulty"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="cultivationMethods"
            ></data-morph>

            <!-- Cultural & Historical -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="historicalSignificance"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="firstDocumented"
            ></data-morph>

            <!-- Commercial & Market -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="commercialValue"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="marketSegments"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="commercialProducts"
            ></data-morph>

            <!-- Environmental & Conservation -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="ecologicalRole"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="ecosystemServices"
            ></data-morph>

            <!-- Research & Innovation -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="researchInterest"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="activeResearchAreas"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="innovativeApplications"
            ></data-morph>

            <!-- Chemical & Properties -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="primaryCompounds"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="secondaryMetabolites"
            ></data-morph>

            <!-- Taxonomy -->
            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="kingdom"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="phylum"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="class"
            ></data-morph>

            <data-morph
              fungus-data={JSON.stringify(fungus)}
              field="order"
            ></data-morph>
          </div>

          <a href={`/fungi/${fungus.slug}`} class="card-link">
            Details ansehen ‚Üí
          </a>
        </div>
      ))
    ) : (
      <div class="empty-state">
        <p style="font-size: 1.5rem; color: rgba(255, 255, 255, 0.7); text-align: center;">
          üçÑ Keine Pilze gefunden
        </p>
        <p style="color: rgba(255, 255, 255, 0.5); text-align: center; margin-top: 0.5rem;">
          Stelle sicher, dass Convex Daten enth√§lt und PUBLIC_CONVEX_URL korrekt ist.
        </p>
      </div>
    )}
  </div>
</BaseLayout>

<style>
  /* Black Glassmorphism Card */
  .fungus-card {
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(16px) saturate(120%);
    -webkit-backdrop-filter: blur(16px) saturate(120%);
    border-radius: 20px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.6), 0 0 0 1px rgba(255, 255, 255, 0.02) inset;
  }

  .fungus-card:hover {
    transform: translateY(-8px) scale(1.02);
    background: rgba(0, 0, 0, 0.6);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.8), 0 0 0 1px rgba(255, 255, 255, 0.08) inset;
    border-color: rgba(255, 255, 255, 0.15);
  }

  .card-image {
    width: 100%;
    height: 0;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    overflow: hidden;
    background: rgba(0, 0, 0, 0.4);
    position: relative;
  }

  .card-image image-morph {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .card-image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.4) 100%);
    pointer-events: none;
  }

  .card-header {
    padding: 1.75rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(10px);
  }

  .card-header name-morph {
    display: block;
  }

  .card-header name-morph:first-child {
    margin-bottom: 0.625rem;
    font-size: 1.25rem;
  }

  .quick-info {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .info-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8125rem;
  }

  .info-label {
    color: rgba(255, 255, 255, 0.5);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.6875rem;
  }

  .info-value {
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
  }

  .card-data {
    padding: 1.75rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    background: rgba(0, 0, 0, 0.5);
    min-height: 280px;
  }

  .card-data data-morph {
    margin-bottom: 0;
  }

  .card-link {
    display: block;
    padding: 1rem 1.5rem;
    text-align: center;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(8px);
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
  }

  .card-link:hover {
    background: rgba(0, 0, 0, 0.7);
    color: #22c55e;
    box-shadow: 0 -2px 12px rgba(34, 197, 94, 0.3) inset, 0 0 20px rgba(34, 197, 94, 0.1);
  }

  /* View Toggle - Black Glassmorphism */
  .view-toggle {
    display: flex;
    gap: 0.5rem;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(16px);
    padding: 0.375rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.6), 0 0 0 1px rgba(255, 255, 255, 0.02) inset;
  }

  .view-btn {
    padding: 0.75rem 1.5rem;
    background: transparent;
    border: none;
    border-radius: 8px;
    color: rgba(255, 255, 255, 0.6);
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .view-btn:hover {
    background: rgba(0, 0, 0, 0.6);
    color: rgba(255, 255, 255, 0.9);
  }

  .view-btn.active {
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(8px);
    color: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(255, 255, 255, 0.1) inset;
  }

  /* Bubble Host */
  #bubble-view-host {
    margin-bottom: 2rem;
  }

  /* Fungi Grid */
  .fungi-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
    padding: 1rem 0;
  }
  
  /* Morphs */
  .morphs {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  /* Tags */
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 0.5rem 0;
  }
  
  /* Detail Link */
  .detail-link {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .detail-link:hover {
    transform: translateX(4px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  }
  
  /* Empty State */
  .empty-state {
    grid-column: 1 / -1;
    padding: 4rem 2rem;
    text-align: center;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .fungi-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .fungus-card {
      padding: 1rem;
    }

    header {
      flex-direction: column;
      align-items: flex-start !important;
    }
  }
  
  /* Dark Mode */
  @media (prefers-color-scheme: dark) {
    .fungus-card {
      background: rgba(30, 30, 30, 0.9);
      color: rgba(255, 255, 255, 0.9);
    }
  }
</style>

<script define:vars={{ fungi }}>
  // Wait for AMORPH and hosts to load
  function initViewToggle() {
    const amorph = window.amorph;
    if (!amorph) {
      console.log('‚è≥ Waiting for AMORPH...');
      setTimeout(initViewToggle, 100);
      return;
    }

    // Get host elements
    const bubbleHost = document.getElementById('bubble-view-host');
    const gridHost = document.getElementById('grid-view-host');
    
    if (!bubbleHost || !gridHost) {
      console.warn('‚ö†Ô∏è Host elements not found, retrying...');
      setTimeout(initViewToggle, 100);
      return;
    }

    // Wait for bubbleHost to be fully upgraded (web component ready)
    if (!bubbleHost.setData) {
      console.log('‚è≥ Waiting for BubbleHost to upgrade...');
      setTimeout(initViewToggle, 100);
      return;
    }

    // DATENGETRIEBEN: √úbergebe Fungi-Daten an BubbleHost
    console.log('üìä Fungi data:', fungi);
    bubbleHost.setData(fungi);
    console.log(`‚úÖ Passed ${fungi.length} fungi to BubbleHost`);

    // MorphHeader will initialize with 4 default perspectives automatically
    console.log('‚úÖ Perspectives will be initialized by MorphHeader');

    // View Toggle functionality
    const viewBtns = document.querySelectorAll('.view-btn');

    viewBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const view = btn.dataset.view;
        
        // Update active state
        viewBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // Toggle views
        if (view === 'grid') {
          gridHost.style.display = 'grid';
          bubbleHost.style.display = 'none';
          console.log('üìä Switched to Grid View');
        } else {
          gridHost.style.display = 'none';
          bubbleHost.style.display = 'block';
          console.log('ü´ß Switched to Bubble View');
        }
      });
    });

    console.log('‚úÖ View toggle initialized with', fungi.length, 'fungi');
  }

  // Start initialization
  console.log('üöÄ Starting view toggle initialization...');
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initViewToggle);
  } else {
    initViewToggle();
  }
</script>
