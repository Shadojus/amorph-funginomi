---
/**
 * üçÑ FUNGUS DETAIL PAGE
 * ======================
 * 
 * Shows detailed information about a single fungus species.
 * Uses detail-morphs for premium rendering with glassmorphism.
 * 
 * Features:
 * - Hero section with image and name
 * - Perspective-based data sections
 * - Premium styled detail-morphs (detail-data-morph, detail-tag-morph, etc.)
 * - Responsive layout
 */

import BaseLayout from '@/amorph/core/layouts/BaseLayout.astro';
import { fetchEntity } from '@/amorph/core/convex';
import { perspectiveDefinitions } from '../../convex/perspectiveFieldMappings';

// Get entity from slug
const { slug } = Astro.params;
const entity = await fetchEntity(slug!);

if (!entity) {
  return Astro.redirect('/fungi');
}

// Build perspective config from central definitions (SINGLE SOURCE OF TRUTH)
const perspectiveConfig: Record<string, { title: string; icon: string; color: string }> = {};
for (const [id, def] of Object.entries(perspectiveDefinitions)) {
  perspectiveConfig[id] = {
    title: def.label,
    icon: def.icon,
    color: def.color
  };
}

// Build perspectives array from entity data and config
// Only include perspectives that have data
const perspectives = Object.entries(perspectiveConfig)
  .map(([id, config]) => ({
    id,
    ...config,
    data: (entity as any)[id]
  }))
  .filter(p => p.data && Object.keys(p.data).length > 0);

console.log('[Detail Page] Entity:', entity.commonName);
console.log('[Detail Page] Perspectives with data:', perspectives.map(p => p.id));
---

<BaseLayout 
  title={`${entity.commonName} - Funginomi`} 
  description={entity.description || `Details about ${entity.commonName}`}
  enableGlow={true}
  enableSearch={false}
  enableAnimation={true}
  showPerspectives={true}
>
  <div class="entity-detail">
    <!-- HERO SECTION -->
    <section class="hero">
      <div class="hero-image">
        {entity.imageUrl && (
          <image-morph 
            src={entity.imageUrl} 
            alt={entity.commonName}
            width="100%"
            height="400px"
            style="border-radius: 16px;"
          ></image-morph>
        )}
      </div>
      <div class="hero-content">
        <detail-text-morph 
          value={entity.commonName}
          size="large"
          weight="bold"
        ></detail-text-morph>
        {entity.latinName && (
          <detail-text-morph 
            value={entity.latinName}
            size="medium"
            style="font-style: italic; opacity: 0.8;"
          ></detail-text-morph>
        )}
        {entity.description && (
          <detail-text-morph 
            value={entity.description}
            label="Description"
            maxlines={5}
          ></detail-text-morph>
        )}
      </div>
    </section>

    <!-- PERSPECTIVES -->
    <section class="perspectives-container">
      {perspectives.map(p => (
        <perspective-host 
          perspective={p.id}
          title={p.title}
          icon={p.icon}
          color={p.color}
        >
          <detail-data-morph
            entity-data={JSON.stringify(p.data)}
            perspective={p.id}
            mode="deep"
            style={`--perspective-color: ${p.color}`}
          ></detail-data-morph>
        </perspective-host>
      ))}
    </section>

    <!-- Similar Species (if available) -->
    {entity.lookalikeSpecies && entity.lookalikeSpecies.length > 0 && (
      <section class="similar-species">
        <h2 class="section-title">
          <span class="section-icon">üîç</span>
          Similar Species
        </h2>
        <div class="similar-grid">
          {entity.lookalikeSpecies.map((species: any) => (
            <div class="similar-card">
              <detail-text-morph 
                value={species.name || species.commonName || 'Unknown'}
                label="Species"
                size="medium"
              ></detail-text-morph>
              {species.danger && (
                <detail-tag-morph
                  tags={[species.danger]}
                  variant="badge"
                ></detail-tag-morph>
              )}
            </div>
          ))}
        </div>
      </section>
    )}
  </div>
</BaseLayout>

<style>
  .entity-detail {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }

  /* ===== HERO ===== */
  .hero {
    margin-bottom: 3rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: start;
  }

  .hero-image {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
  }

  /* ===== PERSPECTIVES ===== */
  .perspectives-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  /* ===== SIMILAR SPECIES ===== */
  .similar-species {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.5rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 1.5rem;
  }

  .section-icon {
    font-size: 1.25rem;
  }

  .similar-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .similar-card {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 12px;
    padding: 1.25rem;
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.25s ease;
  }

  .similar-card:hover {
    background: rgba(0, 0, 0, 0.3);
    border-color: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 768px) {
    .entity-detail {
      padding: 1rem;
    }

    .hero {
      grid-template-columns: 1fr;
    }

    .hero-image {
      max-height: 300px;
    }
  }
</style>

<script>
  // Import detail morphs
  import '@/amorph/features/detail-view/morphs/DataMorph.js';
  import '@/amorph/features/detail-view/morphs/TextMorph.js';
  import '@/amorph/features/detail-view/morphs/TagMorph.js';
  import '@/amorph/features/detail-view/morphs/RangeMorph.js';
  import '@/amorph/features/detail-view/morphs/KeyValueMorph.js';
  import '@/amorph/features/detail-view/morphs/RadarChartMorph.js';
  import '@/amorph/features/detail-view/morphs/TimelineMorph.js';
  import '@/amorph/features/detail-view/morphs/MapMorph.js';
  import '@/amorph/features/perspective-system/PerspectiveHost.js';

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', () => {
    console.log('[Detail Page] Initialized');
    
    // Dispatch initial perspective change
    const defaultPerspectives = ['identity', 'safetyAndIdentification'];
    window.dispatchEvent(new CustomEvent('perspective-changed', {
      detail: { perspectives: defaultPerspectives }
    }));
  });
</script>